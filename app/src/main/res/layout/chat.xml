<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Thanh trên cùng -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Nút quay lại -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back Icon"
            android:layout_marginEnd="8dp" />

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar"
            android:contentDescription="User Avatar"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ThienNguyen"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <!-- Nút gọi -->
        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:contentDescription="Call Icon"
            android:layout_marginEnd="16dp" />

        <!-- Nút gọi video -->
        <ImageView
            android:id="@+id/videoCallIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_videocall"
            android:contentDescription="Video Call Icon" />
    </LinearLayout>

    <!-- Danh sách tin nhắn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/messageInput"
        android:padding="8dp" />

    <!-- Khung nhập tin nhắn -->
    <LinearLayout
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Biểu tượng chèn ảnh -->
        <ImageView
            android:id="@+id/photoIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_camera_k"
            android:contentDescription="Camera Icon"
            android:layout_marginEnd="8dp" />

        <!-- Ô nhập tin nhắn -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhắn tin..."
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="8dp"
            android:imeOptions="actionSend" />

        <!-- Biểu tượng gửi -->
        <ImageView
            android:id="@+id/sendIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_send"
            android:contentDescription="Send Icon"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
