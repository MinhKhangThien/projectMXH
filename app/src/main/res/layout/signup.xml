<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Logo hoặc tiêu đề -->
            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"
                android:textColor="#000000"
                android:drawableLeft="@drawable/logo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- Nút đăng ký với Google -->
            <Button
                android:id="@+id/btn_google_signup"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/ic_google"
                android:padding="12dp"
                android:text="Sign up with Google"
                android:textColor="#000000" />

            <!-- Nút đăng nhập bằng Email -->
<!--            <Button-->
<!--                android:id="@+id/btn_email_login"-->
<!--                android:layout_width="267dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="32dp"-->
<!--                android:background="@drawable/rounded_button"-->
<!--                android:drawableLeft="@drawable/ic_email"-->
<!--                android:padding="12dp"-->
<!--                android:text="Log in with Email"-->
<!--                android:textColor="#000000" />-->

            <!-- Hoặc -->
            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#888888" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="16dp" />

            <!-- Trường nhập Email -->
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="16dp" />


            <!-- Trường nhập Password -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="16dp" />
            <EditText
                android:id="@+id/et_passwordconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="16dp" />

            <!-- Checkbox đồng ý điều khoản -->
            <CheckBox
                android:id="@+id/checkbox_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I agree to the Terms and Privacy Policy."
                android:textColor="#888888"
                android:layout_marginBottom="24dp" />

            <!-- Nút Continue -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_dark"
                android:padding="12dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp" />

            <!-- Link Log In -->
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have an account? Log In"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>