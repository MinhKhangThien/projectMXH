<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F0F0">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Social"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:drawableLeft="@drawable/logo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/verification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Enter verification code"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/verification_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Code sent to anorouzi.work@gmail.com"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/edittext_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@android:drawable/edit_text" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@android:drawable/edit_text" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@android:drawable/edit_text" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:gravity="center"
            android:background="@android:drawable/edit_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resend_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend in"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/resend_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:45"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resend_layout"
        android:layout_marginTop="20dp"
        android:text="Verify"
        android:background="@drawable/round_button_colormain"
        android:textColor="#FFFFFF" />
</RelativeLayout>
